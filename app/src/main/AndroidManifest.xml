<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bendavid.is.intershopping">

    <application
        android:label="@string/app_name"
        android:theme="@style/Theme.InterShopping"
        android:icon="@drawable/ic_shopping_cart"
        android:allowBackup="true"
        android:name="com.orm.SugarApp">
        <meta-data
            android:name="DATABASE"
            android:value="intershopping.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="bendavid.is.intershopping.entities" />

        <activity android:name=".activities.InterShoppingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ShoppingListDetailActivity"></activity>

    </application>

</manifest>
